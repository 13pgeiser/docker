options {
    directory "/var/cache/bind";
    dnssec-validation auto;
    auth-nxdomain no;    # conform to RFC1035
    listen-on-v6 { none; };
    filter-aaaa-on-v4 yes;
    forward only;
    forwarders {
        192.168.188.1;
    };
    recursion yes;  # enables resursive queries
    version none;
};

